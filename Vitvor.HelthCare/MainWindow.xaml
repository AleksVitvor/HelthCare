<Window x:Class="Vitvor.HelthCare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vitvor.HelthCare"
        mc:Ignorable="d"
        Title="Helth Care" Height="450" Width="800" Closing="Window_Closing" Background="#639787">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#60838F"></Setter>
            <Setter Property="FontFamily" Value="Impact"></Setter>
        </Style>
    </Window.Resources>
    <Grid x:Name="baseMainAdmin">
        <StackPanel x:Name="Authentication" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" DataContext="{Binding User}">
            <Label HorizontalAlignment="Center">User</Label>
            <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Label HorizontalAlignment="Center">Password</Label>
            <PasswordBox x:Name="PassBox"></PasswordBox>
        </StackPanel>
        <Button Command="{Binding Enter}" CommandParameter="{Binding User}" Margin="0,130,0,0" Width="100" Height="20">Подтвердить</Button>
        <StackPanel x:Name="BaseMainAdmin" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Collapsed">
            <Button>Добавить медучреждение</Button>
        </StackPanel>
    </Grid>
</Window>
