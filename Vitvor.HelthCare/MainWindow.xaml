<Window x:Class="Vitvor.HelthCare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vitvor.HelthCare"
        mc:Ignorable="d"
        Title="Helth Care" Height="450" Width="800" Closing="Window_Closing" Background="#34C6CD">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF7E67"></Setter>
            <Setter Property="FontFamily" Value="Comic Sans MS"></Setter>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Comic Sans MS"></Setter>
        </Style>
    </Window.Resources>
    <Grid x:Name="baseMainAdmin">
        <StackPanel VerticalAlignment="Center">
            <StackPanel x:Name="Authentication" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" DataContext="{Binding User}">
                <Label HorizontalAlignment="Center">User</Label>
                <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                <Label HorizontalAlignment="Center">Password</Label>
                <PasswordBox x:Name="PassBox"></PasswordBox>
            </StackPanel>
            <Button x:Name="ConfirmEnter" Command="{Binding Enter}" CommandParameter="{Binding User}" Margin="0,5,0,0" Width="100">Подтвердить</Button>
        </StackPanel>
        <!--Работа с интерфейсом разработчика-->
        <StackPanel x:Name="BaseMainAdmin" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Collapsed">
            <Button Command="{Binding WorkWithMI}">Добавить медучреждение</Button>
            <Button Command="{Binding WorkWithMI}">Удалить медучреждение</Button>
            <Button>Добавить болезнь</Button>
            <Button>Изменить болезнь</Button>
        </StackPanel>
        <StackPanel x:Name="MedicalInstitutionDescription" Orientation="Vertical" Margin="0,30,0,0" Visibility="Hidden" DataContext="{Binding MedicalInstitution}">
            <Label>Название</Label>
            <TextBox Text="{Binding MedicalInstitutionName, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Label>AdminUsername</Label>
            <TextBox Text="{Binding AdminUsername, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Label>AdminPassword</Label>
            <PasswordBox></PasswordBox>
        </StackPanel>
    </Grid>
</Window>
